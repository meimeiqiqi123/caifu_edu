.cover{
  width: 100%;
  height: 380rpx;
}

.container_1{
  width: 90%;
  margin: 0 auto
}

.comment{
  display: flex;
  margin-top: 10rpx
}
.comment .head{
  flex:15%
}
.comment .head image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%
}
.comment .content{
  flex:85%;
  display: flex;
  flex-direction: column;
  color: #5d5d5d
}
.comment .content .nick{
  font-size: 26rpx;
}
.comment .content .time{
  font-size: 24rpx;
}
.comment .content .com{
  font-size: 30rpx;
  margin-top: 10rpx
}
.more{
  color: #ff8e8e;
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx
}


.comment-bottom{
  position: fixed;
  left:0;
  bottom: 0;
  width:100%;
  background:#cccccc5b;
  z-index: 99;
  height: 80rpx;

}
.send-comment{
  width:100%;
  border-top: 1rpx solid #e1e1e1;
  display: flex
}
 
.send-view{
  margin: 5rpx auto;
}

.send-buttom{
  margin: 10rpx auto
}

.activty{
  color: #0099Ff;
}
.send-input{
  width:600rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  border-radius: 10rpx;
  margin-top: 5rpx;
  padding-left: 5rpx;
  margin-bottom: 18rpx;
  font-size: 28rpx;
}
