page{
  background-color: #d9eeff
}

.container_c{
  width: 100%;
  height: 100%;
}
.swiper image{
  width: 100%;
  height: 100%;
}
.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #d9eeff;
  border-top: 0;
  border-bottom: 0

}
.weui-icon-search {
  margin-right: 8px;
}

.weui-search-bar__text {
  display: inline-block;
  font-size: 26rpx;
  vertical-align: middle;
 
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  border-radius: 20px;
  background: #fff;
  border: 1rpx solid #E6E6EA;
}
.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 24rpx;
  color: #cccccc
}
.weui-icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}
.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9B9B9B;
  background: #FFFFFF;
  line-height: 28px;
}

.course_title{
  width: 100%
}
.course_title .title_img{
  text-align: center;
  margin: 20rpx auto
}
.course_title .title_img .ct{
 width:480rpx;
 height: 100rpx;
}
