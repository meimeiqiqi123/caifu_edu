}

.course_list{
  width: 95%;
  margin: 20rpx auto
} 
.course_list .course{
  margin-top: 20rpx;
  width: 100%;
  height: 280rpx;
  display: flex;
  border-radius: 20rpx;
  box-shadow: 0 3px 6px 0 #237bc2;
}
.course_list .course image{
  flex:60%;
  height: 280rpx;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius:20rpx;
} 
.course_list .course .content{
  flex:40%;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 10rpx;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius:20rpx;
}
.content .a_name{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 30rpx;
}
.content .a_name .name{
  overflow: hidden;
 text-overflow: ellipsis;
  white-space: nowrap;
  width: 260rpx
}
.content .a_name image{
  width: 35rpx;
  height: 30rpx;
  margin-right: 5rpx;
}
.content .c_name{
