.order_header{
  width: 100%;
  height:150rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.order_header .header_item{
  color: #fff;
  font-size: 30rpx;
  text-align: center
}
.orcount{
  font-size: 46rpx
}

.cate{
  display: flex;
  font-size: 14px;
  background: #fff;
  flex-wrap: wrap;
  color: #666;
  width: 100%;
}
.cate-item{
  text-align: center;
  width:33%;
  margin-top:20rpx;
  padding-bottom: 20rpx;
}
.hover{
  color: #2EC5E8;
  border-bottom: 1px solid #2EC5E8
}
.order{
  margin-top: 20rpx;
  background-color: #fff
}
.order .order_h{
  display: flex;
  height:80rpx;
  align-items: center;
  border-bottom: 1px solid #eeeeee
}
.order_no{
  flex: 50%
}
.info{
  flex:50%;
}
.info .user{
  display: inline-block;
}
.order_c{
  height: 240rpx;
  display: flex;
}
.order_c .pic{
  flex:50%;
  margin: auto;
  height: 200rpx;
  width: 80%
}
.order_c .content{
  flex:50%;
  font-size: 28rpx;
  margin-right: 80rpx
}
.order_c .content .name{
   text-align: right; 
   font-size: 32rpx
}
.order_c .content .price{
  text-align: right; 
  color: #f27d00;
   margin-top: 20rpx
}
.verfy{
  float: right; 
   margin-top: 20rpx
}
.phone{
  display: inline-block;
  width: 120rpx;
  height: 50rpx;
  border-radius: 30rpx;
  color: #fff;
  text-align:center;
  line-height: 50rpx;
  border:1px solid #2EC5E8;
  margin-left: 20rpx
}
.verfy .butt{
  width: 160rpx;
  height: 60rpx;
  border-radius: 30rpx;
  color: #fff;
  text-align:center;
  line-height: 60rpx
}