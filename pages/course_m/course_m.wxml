          <text class="flex-cell flex-row line">{{item.course}}</text>
          <text class="flex-cell flex-row line">{{item.teacher}}</text>
          <text class="flex-cell flex-row line">{{item.num}}</text>
          <view class="flex-cell flex-row line">            
              <image style="width: 38rpx; height: 38rpx;" src="../../resource/images/u145.png"></image>
              <image style="width: 38rpx; height: 38rpx;" src="../../resource/images/u147.png"></image>
          </view>             
        </view> 
     </view>
   </view>                              
                 
</view>
