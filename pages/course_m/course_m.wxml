<view class="container">
  <view class="page">
    <view class="header_s"> 
     <view class="ft fw title_content flex-center">课程管理</view>                            
   </view>
   <view id="panel" class="flex-column font24">
     <view class="flex-cell flex-row">
       <text class="flex-cell flex-row text">课程</text>
