  padding: 0 20rpx;
  border-bottom: 1px solid #cccccc;
  
}
.t-name,.t-code{
  width: 90%;
  font-size:12px;
  overflow: hidden;
  margin: auto

}
.key{
  width: 20%;
}
.t-code .code{
  width: 30%;
}
.t-code .code button{
  width: 180rpx;
  height:60rpx;
